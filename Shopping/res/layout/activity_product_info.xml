<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context="com.activity.Product_infoActivity" >

    <RelativeLayout
        android:id="@+id/proinfo_rt_top"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="#E4E4E4" >

            <Button
                android:id="@+id/proinfo_btn_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/goback" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="产品详情"
            android:textSize="20dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:background="#E4E4E4" >

            <Button
                android:id="@+id/proinfo_btn_home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/home" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/proinfo_rt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proinfo_rt_top"
        android:layout_marginTop="10dp"
        android:background="@color/white" >

        <RelativeLayout
            android:id="@+id/proinfo_imgs"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="5dp"
            android:background="@drawable/itemtop" >
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/proinfo_lt_imgs"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_below="@+id/proinfo_imgs"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/proinfo_tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="风向标家纺 全棉斜纹三拼色四件套撞色撞色潮流床品套"
                android:textColor="#444444" />

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#DEDEDE" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/proinfoweixin" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/proinfoqq" />

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/proinfoca" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/proinfo_lt_imgs"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="#DEDEDE" />

        <TextView
            android:id="@+id/proinfo_tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proinfo_lt_imgs"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:text="￥180.00 - 299.00"
            android:textColor="@color/red"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/proinfo_lt_there"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/proinfo_tv_money"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="运费 买家承担"
                android:textColor="#A3A3A3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="累计售出  9件"
                android:textColor="#A3A3A3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="浏览量  12521"
                android:textColor="#A3A3A3" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/proinfo_lt_there"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="#DEDEDE" />

        <TextView
            android:id="@+id/proinfo_tv_server"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/proinfo_lt_there"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:text="服务承诺: 第三方质检  差评返现" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/proinfo_rt_content"
        android:background="#DEDEDE" />

    <RelativeLayout
        android:id="@+id/proinfo_lt_list1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/proinfo_rt_content"
        android:layout_marginTop="10dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="选择 颜色分类 适用床尺寸"
            android:textColor="#393939" />

        <ImageView
            android:id="@+id/rights"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:src="@drawable/side_right_img" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/proinfo_rt_content"
        android:layout_marginTop="10dp"
        android:background="#DEDEDE" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/proinfo_lt_list1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#DEDEDE" />

    <RelativeLayout
        android:id="@+id/proinfo_lt_list2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/proinfo_lt_list1"
        android:layout_marginTop="10dp"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="商品详情"
            android:textColor="#393939" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/proinfo_lt_list2"
        android:background="#DEDEDE" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/proinfo_lt_list1"
        android:layout_marginTop="10dp"
        android:background="#DEDEDE" />

    <TextView
        android:id="@+id/proinfo_btn_back_tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/proinfo_lt_list2"
        android:layout_margin="10dp" />
<Button
        android:id="@+id/login_btn_submit"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/proii_addbuy" />
</RelativeLayout>