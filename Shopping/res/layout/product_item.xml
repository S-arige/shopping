<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/proItem_imgTop"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_weight="1"
        android:src="@drawable/itemtop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/proItem_img"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/itemtop" />

            <TextView
                android:id="@+id/proItem_txt"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/proItem_img"
                android:layout_margin="10dp"
                android:text="1231231231232123123"
                android:textColor="#686868" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/proItem_txt"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#E5E5E5" />

            <TextView
                android:id="@+id/proItem_money"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/proItem_txt"
                android:layout_margin="10dp"
                android:text="￥240"
                android:textColor="@color/red" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/proItem_img1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/itemtop" />

            <TextView
                android:id="@+id/proItem_txt1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_below="@+id/proItem_img1"
                android:layout_margin="10dp"
                android:text="1231231231232123123"
                android:textColor="#686868" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_below="@+id/proItem_txt1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#E5E5E5" />

            <TextView
                android:id="@+id/proItem_money1"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/proItem_txt1"
                android:layout_margin="10dp"
                android:text="￥240"
                android:textColor="@color/red" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>